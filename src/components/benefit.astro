---
// Importa los íconos que usas en los beneficios
import Idea from '../icons/idea.astro'
import Users from '../icons/users.astro'
import Computer from '../icons/computer.astro'

// Componente BenefitItem
// (Eliminado: la lógica se moverá al template Astro)

// Lista de beneficios
const benefits = [
  {
    icon: Idea,
    title: 'Innovación',
    description:
      'Creamos soluciones financieras modernas y seguras para conectar instituciones con las oportunidades del mundo digital.',
    data_aos_delay: '100'
  },
  {
    icon: Users,
    title: 'Acompañamiento',
    description:
      'Te acompañamos en cada paso, brindándote herramientas y apoyo para llevar tu negocio al siguiente nivel.',
    data_aos_delay: '200'
  },
  {
    icon: Computer,
    title: 'Transformación Digital',
    description:
      'Invitamos a todas las instituciones que quieran crecer y explorar nuevas oportunidades digitales a sumarse a esta transformación.',
    data_aos_delay: '300'
  }
]
---

<article class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 items-center">
  {
    benefits.map(({ icon: Icon, title, description, data_aos_delay }) => (
      <div
        class="flex items-center border border-tertiary/10 bg-tertiary/5 p-4 gap-2 rounded-lg h-full"
        data-aos="fade-up"
        data-aos-delay={data_aos_delay}
      >
        <div class="items-center text-tertiary">
          <Icon class="w-16 h-16 mx-auto mb-4" />
        </div>
        <div>
          <h4 class="text-2xl font-bold">{title}</h4>
          <p>{description}</p>
        </div>
      </div>
    ))
  }
</article>
